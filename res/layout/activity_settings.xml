    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="${packageName}.${activityClass}" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/show_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NotificationOption" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/transparent_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trans_notif" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/show_toggle_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_toast" />

        </TableRow>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_toggle_option"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/toggle_activity_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/toggle_option"
            android:prompt="@string/activity_toggle_option" />

        <Button
            android:id="@+id/apply_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:onClick="apply" />

    </TableLayout>


